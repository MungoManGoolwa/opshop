# Opshop Online Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database_name
PGHOST=localhost
PGPORT=5432
PGDATABASE=opshop_online
PGUSER=username
PGPASSWORD=password

# Authentication & Session
SESSION_SECRET=your-super-secret-session-key-minimum-32-characters
REPL_ID=your-replit-app-id
ISSUER_URL=https://replit.com/oidc
REPLIT_DOMAINS=your-domain.replit.app,your-custom-domain.com

# Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_publishable_key
STRIPE_PRICE_ID=price_your_subscription_price_id

PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# AI Services
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Application Configuration
NODE_ENV=development
PORT=5000
BASE_URL=http://localhost:5000

# Email Service (Optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@your-domain.com

# External Services (Optional)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Testing Configuration
TEST_DATABASE_URL=postgresql://username:password@host:port/opshop_test
CI=false

# Production Overrides (set these in production)
# NODE_ENV=production
# PORT=3000
# BASE_URL=https://your-production-domain.com