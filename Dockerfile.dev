# Development Dockerfile with hot reload
FROM node:20-alpine AS development

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci

# Copy source code
COPY . .

# Create uploads directory
RUN mkdir -p uploads uploads/products uploads/verification uploads/avatars

# Expose ports
EXPOSE 5000 5001

# Start development server
CMD ["npm", "run", "dev"]