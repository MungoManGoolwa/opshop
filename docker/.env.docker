# Docker Environment Configuration for Opshop Online
# Copy this file to .env and update with your actual values

# Database Configuration (automatically configured in docker-compose)
# DATABASE_URL=postgresql://opshop_user:opshop_secure_password_2024@postgres:5432/opshop

# Session Configuration
SESSION_SECRET=your_super_secure_session_secret_change_this_in_production_with_32_chars_min

# Domain Configuration for Authentication
REPLIT_DOMAINS=localhost,127.0.0.1,0.0.0.0
REPL_ID=opshop-local-docker
ISSUER_URL=https://replit.com/oidc

# Stripe Payment Configuration
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here

# PayPal Payment Configuration  
# Get these from https://developer.paypal.com/
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here

# AI-Powered Features (Anthropic Claude)
# Get this from https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here

# Analytics and Monitoring (Optional)
# Get GA4 Measurement ID from Google Analytics
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry Error Tracking (Optional)
# Get DSN from https://sentry.io/
VITE_SENTRY_DSN=https://your_sentry_dsn_here

# Application Configuration
NODE_ENV=production
PORT=5000

# Email Configuration (if using email features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads

# Security Configuration
CORS_ORIGIN=http://localhost:5000,http://127.0.0.1:5000,http://0.0.0.0:5000
TRUST_PROXY=true

# Redis Configuration (handled by docker-compose)
# REDIS_URL=redis://default:opshop_redis_password_2024@redis:6379